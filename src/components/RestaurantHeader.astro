---
interface Props {
  name: string;
  slug: string;
  isActive: boolean;
  currency: string;
  template?: { name: string } | null;
}

const { name, slug, isActive, currency, template } = Astro.props;
---

<header class="mb-4">
  <h2 class="text-4xl font-bold text-white mb-4">{name}</h2>
  <div class="bg-white/20 backdrop-blur-sm rounded-lg p-4 text-white text-sm">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
      <p class="my-1"><strong class="font-semibold">Slug:</strong> <span class="opacity-90">{slug}</span></p>
      <p class="my-1"><strong class="font-semibold">Estado:</strong> <span class={isActive ? 'text-green-200' : 'text-red-200'}>{isActive ? '✅ Activo' : '❌ Inactivo'}</span></p>
      <p class="my-1"><strong class="font-semibold">Moneda:</strong> <span class="opacity-90">{currency}</span></p>
      {template && (
        <p class="my-1"><strong class="font-semibold">Plantilla:</strong> <span class="opacity-90">{template.name}</span></p>
      )}
    </div>
  </div>
</header>

