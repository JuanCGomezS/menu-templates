---
import { formatPrice } from "../lib/utils";

interface Props {
  items: Array<{
    name: string;
    description?: string;
    price: number;
  }>;
  currency: string;
}

const { items, currency } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  {items.map((item) => (
    <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 overflow-hidden border border-gray-100">
      {/* Imagen placeholder - puedes reemplazar esto con una imagen real si est√° disponible */}
      <div class="w-full h-48 bg-gradient-to-br from-orange-100 to-pink-100 flex items-center justify-center">
        <svg class="w-24 h-24 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
      </div>
      <div class="p-4">
        <h5 class="font-semibold text-lg text-gray-900 mb-2">{item.name}</h5>
        {item.description && (
          <p class="text-gray-600 text-sm mb-3 line-clamp-2">{item.description}</p>
        )}
        <div class="flex items-center justify-between pt-2 border-t border-gray-100">
          <span class="text-2xl font-bold text-orange-600">{formatPrice(item.price, currency)}</span>
        </div>
      </div>
    </div>
  ))}
</div>

