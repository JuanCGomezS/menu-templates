---
interface Props {
  restaurants: number;
  categories: number;
  items: number;
  templates: number;
}

const { restaurants, categories, items, templates } = Astro.props;
---

<div class="mb-8 p-6 bg-gradient-to-br from-gray-100 to-gray-200 rounded-xl border border-gray-300 shadow-sm">
  <h2 class="text-2xl font-bold text-gray-900 mb-4">Resumen de la Base de Datos</h2>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4">
    <div class="bg-white rounded-lg p-4 text-center shadow-sm">
      <div class="text-3xl font-bold text-orange-600 mb-1">{restaurants}</div>
      <div class="text-sm text-gray-600 font-medium">Restaurantes</div>
    </div>
    <div class="bg-white rounded-lg p-4 text-center shadow-sm">
      <div class="text-3xl font-bold text-blue-600 mb-1">{categories}</div>
      <div class="text-sm text-gray-600 font-medium">CategorÃ­as</div>
    </div>
    <div class="bg-white rounded-lg p-4 text-center shadow-sm">
      <div class="text-3xl font-bold text-green-600 mb-1">{items}</div>
      <div class="text-sm text-gray-600 font-medium">Items</div>
    </div>
    <div class="bg-white rounded-lg p-4 text-center shadow-sm">
      <div class="text-3xl font-bold text-purple-600 mb-1">{templates}</div>
      <div class="text-sm text-gray-600 font-medium">Templates</div>
    </div>
  </div>
  <p class="text-center mt-4">
    <small class="text-gray-600 text-sm">Revisa la consola del navegador para ver el log completo.</small>
  </p>
</div>
