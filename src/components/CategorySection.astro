---
import ItemList from "./ItemList.astro";

interface Props {
  category: {
    name: string;
    items: Array<{
      name: string;
      description?: string;
      price: number;
    }>;
  };
  currency: string;
}

const { category, currency } = Astro.props;
---

<section class="category-section">
  <h4 class="category-title">{category.name}</h4>
  {category.items && category.items.length > 0 ? (
    <ItemList items={category.items} currency={currency} />
  ) : (
    <p class="empty-message">No hay items en esta categor√≠a</p>
  )}
</section>

<style>
  .category-section {
    margin-bottom: 2rem;
  }
  
  .category-title {
    border-bottom: 2px solid #333;
    padding-bottom: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .empty-message {
    color: #999;
    font-style: italic;
  }
</style>

