---
import ItemList from "./ItemList.astro";

interface Props {
  category: {
    name: string;
    items: Array<{
      name: string;
      description?: string;
      price: number;
    }>;
  };
  currency: string;
}

const { category, currency } = Astro.props;
---

<section class="mb-12">
  <div class="mb-6 pb-3 border-b-2 border-orange-500">
    <h4 class="text-2xl font-bold text-gray-900 inline-block">{category.name}</h4>
  </div>
  {category.items && category.items.length > 0 ? (
    <ItemList items={category.items} currency={currency} />
  ) : (
    <div class="bg-gray-50 rounded-lg p-6 text-center">
      <p class="text-gray-500 italic">No hay items en esta categor√≠a</p>
    </div>
  )}
</section>

