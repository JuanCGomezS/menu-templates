---
import Layout from "../layouts/Layout.astro";
import RestaurantList from "../components/react/RestaurantList";
import DatabaseSummary from "../components/react/DatabaseSummary";
---

<Layout title="Menús de Restaurantes">
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    <div class="mb-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-3">Super Admin - Menús de Restaurantes</h1>
      <p class="text-gray-600 mb-4">Vista de administración: todos los restaurantes y sus configuraciones</p>
      <div class="w-24 h-1 bg-gradient-to-r from-orange-500 to-pink-500 rounded-full mx-auto"></div>
    </div>

    <DatabaseSummary client:load />

    <RestaurantList client:load />
  </div>
</Layout>
